<%posts.forEach(function(post){ %>
<form action="/delete" method="post">
  <div class="item">
    <input
      type="checkbox"
      value="<%=post._id%>"
      name="checkbox"
      onChange="this.form.submit()"
    />
    <div class="contents">
      <h1><%= post.title %></h1>
      <p>
        <%= post.post.substring(0, 50)+" ..." %>
        <a href="/posts/<%=post._id%>">Read more</a>
      </p>
    </div>
  </div>
</form>
<%}) %>
